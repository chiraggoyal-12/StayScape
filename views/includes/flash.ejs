<% if (success && success.length) { %>
  <div class="d-flex justify-content-center mt-3">
    <div class="alert alert-success alert-dismissible fade show shadow rounded px-4 py-3 pe-5" role="alert" style="min-width: 300px; max-width: 600px;">
      <div class="d-flex align-items-center gap-2">
        <i class="bi bi-check-circle-fill fs-5 text-success"></i>
        <span><%= success %></span>
      </div>
      <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"
      ></button>
    </div>
  </div>
<% } %>


<% if (error && error.length) { %>
  <div class="d-flex justify-content-center mt-3">
    <div class="alert alert-danger alert-dismissible fade show shadow rounded px-4 py-3 pe-5" role="alert" style="min-width: 300px; max-width: 600px;">
      <div class="d-flex align-items-center gap-2">
        <i class="bi bi-exclamation-triangle-fill fs-5 text-danger"></i>
        <span ><%= error %></span>
      </div>
      <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close"
      ></button>
    </div>
  </div>
<% } %>
